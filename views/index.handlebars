<div class="container">
	<div class="img-container">
		<img src="" alt="">
	</div>


	<h1>Eat-Da-Burger!</h1>

	<div class="list-container">
		<ul class="not-devoured">
			{{#each burger}}
				{{#unless devoured}}
					<li>{{this.burger_name}}</li>
				{{/unless}}
			{{/each}}
		</ul>

		<ul class="devoured">
			{{#each burger}}
				{{#if devoured}}
					<li>{{this.burger_name}}</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>

	<h2>Create burger</h2>
	<form id="newBurger">
		<textarea type="text" name="burger"></textarea>
		<button type="submit">Save burger</button>
	</form>

</div>
